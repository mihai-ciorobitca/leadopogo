<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recover Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="icon" type="image/png" href="/static/favicon.ico">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1ZlG/nyb4I/KC0zg5owXa7caXg7FqC"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-image: url(/static/background.png);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-color: #f1f1f1;
            height: 100vh;
        }
    </style>
</head>

<body class="bg-light d-flex justify-content-center align-items-center vh-100">
    <div class="col-lg-5 col-md-6 col-10 container mt-5">
        <form method="POST" action="/recover" class="p-4 bg-white rounded shadow-lg mx-auto">
            <h2 class="mb-4 text-center">Recover Form</h2>
            <div class="mb-3">
                <input type="text" name="username" id="username" placeholder="Enter your username" autocomplete="on"
                    maxlength="20" class="form-control" required>
            </div>
            <div class="mb-3">
                <input type="text" name="secretCode" id="secretCode" placeholder="Enter your secret code(6 digits)"
                    autocomplete="off" maxlength="6" class="form-control" required>
            </div>
            <div class="mb-3">
                <div class="input-group">
                    <input type="password" name="newPassword" id="newPassword" placeholder="Enter your password"
                        autocomplete="off" maxlength="64" class="form-control" required>
                    <button class="btn btn-outline-secondary" id="reveal-password-button" type="button"
                        onclick="togglePasswordVisibility()">
                        <i class="fa fa-eye-slash" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
            <div class="mb-3 text-center">
                <button type="submit" class="btn btn-primary w-100">Reset</button>
            </div>
            <div class="text-center">
                <p>Remember password? <a href="/login" class="text-success text-decoration-none">Login</a></p>
            </div>
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
        </form>
    </div>

    <script>
        function togglePasswordVisibility() {
            const passwordInput = document.getElementById('password');
            const revealPasswordButton = document.getElementById('reveal-password-button');
            const currentType = passwordInput.type;
            if (currentType === 'password') {
                passwordInput.type = 'text';
                revealPasswordButton.innerHTML = '<i class="fa fa-eye" aria-hidden="true"></i>';
            } else {
                passwordInput.type = 'password';
                revealPasswordButton.innerHTML = '<i class="fa fa-eye-slash" aria-hidden="true"></i>';
            }
        }
    </script>
</body>

</html>